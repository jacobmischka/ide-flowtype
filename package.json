{
  "name": "ide-flowtype",
  "main": "./lib/main",
  "license": "BSD-3-Clause",
  "repository": "https://github.com/flowtype/ide-flowtype",
  "version": "0.22.1",
  "description": "Flow-typed JavaScript support for Atom IDE",
  "scripts": {
    "ci": "yarn lint",
    "format":
      "prettier --write {lib,eslint-rules}/**/*.js .eslintrc.js package.json",
    "lint": "eslint lib"
  },
  "engines": {
    "atom": ">=1.21.0"
  },
  "dependencies": {
    "atom-languageclient": "0.9.2",
    "flow-language-server": "0.4.3"
  },
  "activationHooks": ["core:loaded-shell-environment"],
  "enhancedScopes": ["source.js.jsx", "source.js.flow", "source.jsx"],
  "prettier": {
    "bracketSpacing": false,
    "proseWrap": "always",
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "consumedServices": {
    "status-bar": {
      "versions": {
        "^1.0.0": "consumeStatusBar"
      }
    },
    "linter-indie": {
      "versions": {
        "2.0.0": "consumeLinterV2"
      }
    },
    "atom-ide-busy-signal": {
      "versions": {
        "0.1.0": "consumeBusySignal"
      }
    },
    "datatip": {
      "versions": {
        "0.1.0": "consumeDatatip"
      }
    }
  },
  "providedServices": {
    "autocomplete.provider": {
      "versions": {
        "2.0.0": "provideAutocomplete"
      }
    },
    "definitions": {
      "versions": {
        "0.1.0": "provideDefinitions"
      }
    },
    "outline-view": {
      "versions": {
        "0.1.0": "provideOutlines"
      }
    },
    "hyperclick": {
      "versions": {
        "0.1.0": "provideHyperclick"
      }
    }
  },
  "devDependencies": {
    "eslint": "^v4.6.0",
    "eslint-config-fbjs-opensource": "^1.0.0",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-rulesdir": "^0.1.0",
    "prettier": "^1.6.1"
  }
}
